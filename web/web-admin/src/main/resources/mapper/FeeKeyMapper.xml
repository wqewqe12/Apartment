<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lpz.web.admin.mapper.FeeKeyMapper">

    <resultMap id="FeeKeyVoMap" type="com.lpz.web.admin.vo.fee.FeeKeyVo" autoMapping="true">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <collection property="feeValueList" ofType="com.lpz.model.entity.FeeValue" autoMapping="true">
            <id property="id" column="fee_value_id"/>
            <result property="name" column="fee_value_name"/>
        </collection>
    </resultMap>

    <select id="listFeeInfo" resultMap="FeeKeyVoMap">
        select k.id,
               k.name       ,
               v.id         fee_value_id,
               v.name       fee_value_name,
               v.unit       ,
               v.fee_key_id
        from fee_key k
                 left join fee_value v
                     on k.id = v.fee_key_id and v.is_deleted = 0
        where k.is_deleted = 0
    </select>

</mapper>
